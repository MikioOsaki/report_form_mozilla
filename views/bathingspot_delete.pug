extends layout

block content

  h1 #{title}: #{bathingspot.name}
  
  if bathingspot_reports.length
  
    p #[strong Delete the following reports before attempting to delete this bathingspot.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 reports
    
      dl
      each report in bathingspot_reports
        dt 
          a(href=report.url) #{report.subject}
        dd #{report.description}

  else
    p Do you really want to delete this bathingspot?
    
    form(method='POST' action='')
      div.form-group
        input#bathingspotid.form-control(type='hidden',name='bathingspotid', required='true', value=bathingspot._id )

      button.btn.btn-primary(type='submit') Delete